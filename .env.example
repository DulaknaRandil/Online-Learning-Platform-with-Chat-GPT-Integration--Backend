# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Node Environment
NODE_ENV=production

# Server Port (Vercel will override this)
PORT=5000

# MongoDB Connection String
# Get this from MongoDB Atlas or your MongoDB provider
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/online-learning-platform?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# OpenAI API Key for GPT integration
# Get this from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Groq API Key for fallback LLM service (optional)
GROQ_API_KEY=gsk-your-groq-api-key-here
GROQ_MODEL=meta-llama/llama-4-scout-17b-16e-instruct

# Frontend URL for CORS and redirects
FRONTEND_URL=https://your-frontend-deployment.vercel.app

# CORS Origin - Set to your frontend URL
CORS_ORIGIN=https://your-frontend-deployment.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# File Upload
MAX_FILE_SIZE=10485760

# Security
BCRYPT_SALT_ROUNDS=12